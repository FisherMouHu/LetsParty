<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:layout_margin="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title_item_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="@dimen/line_margin"
            android:padding="2dp"
            android:text="Event Title"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/time_item_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/title_item_event"
            android:layout_marginStart="8dp"
            android:layout_marginTop="@dimen/line_margin"
            android:text="Event Time"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/location_item_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/time_item_event"
            android:layout_marginStart="8dp"
            android:layout_marginTop="@dimen/line_margin"
            android:padding="2dp"
            android:text="Event Location"
            android:textSize="10sp" />

        <ImageView
            android:id="@+id/imageView_item_event"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="150dp"
            android:layout_toRightOf="@id/title_item_event"
            android:fitsSystemWindows="true"
            android:padding="2dp"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>