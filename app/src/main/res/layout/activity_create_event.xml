<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="@dimen/screen_margin"
    android:layout_marginRight="@dimen/screen_margin"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="240dp"
                android:id="@+id/iv_event_photo"
                android:src="@drawable/empty_image"
                android:clickable="true"
                android:layout_marginTop="@dimen/screen_margin"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title:"
                android:id="@+id/tv_title"
                android:padding="8dp"
                app:layout_constraintTop_toBottomOf="@+id/iv_event_photo"
                app:layout_constraintLeft_toLeftOf="parent" />
            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/et_event_title"
                android:padding="8dp"
                app:layout_constraintBaseline_toBaselineOf="@+id/tv_title"
                app:layout_constraintLeft_toRightOf="@+id/tv_title" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date:"
                android:id="@+id/tv_event_date"
                android:padding="8dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_title"
                app:layout_constraintLeft_toLeftOf="parent" />
            <EditText
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/et_event_date"
                android:clickable="true"
                android:padding="8dp"
                app:layout_constraintBaseline_toBaselineOf="@+id/tv_event_date"
                app:layout_constraintLeft_toRightOf="@+id/tv_event_date"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time:"
                android:id="@+id/tv_event_time"
                android:padding="8dp"
                app:layout_constraintBaseline_toBaselineOf="@+id/tv_event_date"
                app:layout_constraintLeft_toRightOf="@+id/et_event_date" />
            <EditText
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/et_event_time"
                android:clickable="true"
                android:padding="8dp"
                app:layout_constraintBaseline_toBaselineOf="@+id/tv_event_time"
                app:layout_constraintLeft_toRightOf="@+id/tv_event_time"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location:"
                android:id="@+id/tv_event_location"
                android:padding="8dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_event_time"
                app:layout_constraintLeft_toLeftOf="parent" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Street:"
                android:id="@+id/tv_location_street"
                android:padding="8dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_event_location"
                app:layout_constraintLeft_toLeftOf="parent" />
            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/et_location_street"
                android:padding="8dp"
                app:layout_constraintBaseline_toBaselineOf="@+id/tv_location_street"
                app:layout_constraintLeft_toRightOf="@+id/tv_location_street"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="City:"
                android:id="@+id/tv_location_city"
                android:padding="8dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_location_street"
                app:layout_constraintLeft_toLeftOf="parent" />
            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/et_location_city"
                android:padding="8dp"
                app:layout_constraintBaseline_toBaselineOf="@+id/tv_location_city"
                app:layout_constraintLeft_toRightOf="@+id/tv_location_city"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="State:"
                android:id="@+id/tv_location_state"
                android:padding="8dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_location_city"
                app:layout_constraintLeft_toLeftOf="parent" />
            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/et_location_state"
                android:padding="8dp"
                app:layout_constraintBaseline_toBaselineOf="@+id/tv_location_state"
                app:layout_constraintLeft_toRightOf="@+id/tv_location_state"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Country:"
                android:id="@+id/tv_location_country"
                android:padding="8dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_location_state"
                app:layout_constraintLeft_toLeftOf="parent" />
            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/et_location_country"
                android:padding="8dp"
                app:layout_constraintBaseline_toBaselineOf="@+id/tv_location_country"
                app:layout_constraintLeft_toRightOf="@+id/tv_location_country"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Zip code:"
                android:id="@+id/tv_location_zipcode"
                android:padding="8dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_location_country"
                app:layout_constraintLeft_toLeftOf="parent" />
            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/et_location_zipcode"
                android:padding="8dp"
                app:layout_constraintBaseline_toBaselineOf="@+id/tv_location_zipcode"
                app:layout_constraintLeft_toRightOf="@+id/tv_location_zipcode"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category:"
                android:id="@+id/tv_event_category"
                android:padding="8dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_location_zipcode"
                app:layout_constraintLeft_toLeftOf="parent"/>
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinner_category"
                android:entries="@array/interest_array"
                android:padding="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_event_category"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description:"
                android:id="@+id/tv_event_description"
                android:padding="8dp"
                app:layout_constraintTop_toBottomOf="@+id/spinner_category"
                app:layout_constraintLeft_toLeftOf="parent"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp"
                android:id="@+id/et_description"
                android:inputType="textMultiLine"
                android:lines="5"
                android:maxLength="100"
                app:layout_constraintTop_toBottomOf="@+id/tv_event_description"
                app:layout_constraintLeft_toLeftOf="parent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Friends only:"
                android:id="@+id/tv_event_friendsOnly"
                android:padding="8dp"
                app:layout_constraintTop_toBottomOf="@+id/et_description"
                app:layout_constraintLeft_toLeftOf="parent"/>
            <ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tb_friendsOnly"
                android:checked="false"
                android:textOff="NO"
                android:textOn="YES"
                app:layout_constraintLeft_toRightOf="@+id/tv_event_friendsOnly"
                app:layout_constraintBaseline_toBaselineOf="@id/tv_event_friendsOnly" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <Button
        android:layout_width="@dimen/btn_width"
        android:layout_height="wrap_content"
        android:text="Post"
        android:id="@+id/btn_post"
        style="?button"
        android:layout_marginBottom="10dp"
        android:textSize="@dimen/title_text_size"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>
